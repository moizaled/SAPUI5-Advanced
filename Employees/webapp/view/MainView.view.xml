<mvc:View controllerName="logaligroup10.Employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox visible="true" busy="false">
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" labelFor="InputEmployee"/>
                            <Input id="InputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"/>
                            <Label id="labelCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" labelFor="slCountry" visible="true"/>
                            <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" forceSelection="false" items ="{jsonCountries>/ListCountry}" visible="true">
                                <items>
                                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>

                        </HBox>
                        <core:Fragment fragmentName="logaligroup10.Employees.fragment.TableEmployee" type="XML"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
